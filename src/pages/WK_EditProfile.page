                    <apex:param name="daily"  value=""/>
                    <apex:param name="weekly"  value=""/>
                    <apex:param name="none"  value=""/>
                </apex:actionfunction>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</apex:form>
