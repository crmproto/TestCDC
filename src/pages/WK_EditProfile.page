          <!--<apex:inputField value="{!UserRec.LastName}" html-placeholder="Required" id="lastname" />-->
          <apex:inputText value="{!lastName}" html-placeholder="Required" id="lastname" /> 
           <ul class="parsley-errors-list filled" id="edit-l-name" style="display:none">
             <li class="parsley-required">This value is required.</li>
