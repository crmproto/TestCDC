           <!-- <input type="text" name="last-name" value=" {!UserRec.LastName}" placeholder="Required" required="true" id="lastname"/>-->
          </div>
          <div class="label"> Mobile# </div>
          <div class="value">
          <apex:inputField value="{!UserRec.MobilePhone}" html-placeholder="Required" id="MobilePhone" styleClass="maskedPhone"/>
