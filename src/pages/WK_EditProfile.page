<script>

   function previewFile() {
      var preview = document.querySelector('.prof-pic');
      var file    = document.querySelector('.test-label').files[0];
      var reader  = new FileReader();

      reader.onloadend = function () {
        preview.src = reader.result;
      }
       $('.profileImg2').show();
       $('.noProfileImg2').hide();

      if (file) {
        reader.readAsDataURL(file);
      } else {
        preview.src = "";
          
      }
    }
</script>

